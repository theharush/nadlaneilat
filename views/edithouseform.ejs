<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include templates/head.ejs%>
    <style>
      .mar-top{
        margin-top:50px;
      }
    </style>
  </head>
  <body >

<% include templates/header.ejs%>

<% include templates/adminMenu.ejs%>

<section id="contact-page" class="mar-top">
        <div class="container">
            <div class="center">        
                <h2>דף עריכת "<%= house.adress %>"</h2>
            </div> 
            <div class="row contact-wrap"> 
                <form method="post" action="/manage/edithouseform">
                    <div class="col-sm-5 col-sm-offset-1">
                        <div class="form-group" style="display:none;">
                            <label for="_id">_id</label>
                            <input type="text" name="_id" id="_id" class="form-control" required="required" maxlength="23" value="<%= house._id %>">
                        </div>
                        <div class="form-group">
                            <label for="adress">כתובת</label>
                            <input type="text" name="adress" id="adress" class="form-control" required="required" value="<%= house.adress %>">
                        </div>
                        <div class="form-group">
                            <label for="price">מחיר</label>
                            <input type="number" name="price" id="price" class="form-control" required="required" value="<%= house.price %>">
                        </div>
                        <div class="form-group">
                            <label for="roomnum">מספר חדרים</label>
                            <input type="number" class="form-control" name="roomnum" id="roomnum" required="required" value="<%= house.roomnum %>">
                        </div>
                        <div class="form-group">
                            <label for="size">גודל</label>
                            <input type="number" class="form-control" name="size" id="size" required="required" value="<%= house.size %>">
                        </div>
                        <div class="form-group">
                            <label for="floor">קומה</label>
                            <input type="number" class="form-control" name="floor" id="floor" required="required" value="<%= house.floor %>">
                        </div>
                        <div class="form-group">
                            <label for="view">נוף</label>
                            <input type="text" name="view"  id="view" class="form-control" value="<%= house.view %>">
                        </div>
                        <div class="form-group">
                            <label for="action">להשכרה? (ברירת מחדל היא מכירה)</label>
                            <% if(house.action == true) { %>
                                <input type="checkbox" name="action" id="action" class="form-control" checked="checked">
                              <% } else { %>
                                <input type="checkbox" name="action" id="action" class="form-control">
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="IsRec">למומלצים?</label>
                             <% if(house.IsRec == true) { %>
                                <input type="checkbox" name="IsRec" id="IsRec" class="form-control" checked="checked">
                              <% } else { %>
                                <input type="checkbox" name="IsRec" id="IsRec" class="form-control">
                              <% } %>
                        </div>
                        
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label for="message">סוג</label>
                            <select class="form-control" id="housetype" name="housetype" id="sel1">
                              <option>לא צויין</option>
                              <option>דירה</option>
                              <option>דירת גן</option>
                              <option>גג/פנטהוז</option>
                              <option>דופלקס</option>
                              <option>לופט/סטודיו</option>
                              <option>פטיו</option>
                              <option>טור</option>
                              <option>קוטג׳</option>
                              <option>וילה/ דו-משפחתי</option>
                              <option>דירת נופש</option>
                              <option>יחידת דיור</option>
                              <option>מגרשים</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">הערות</label>
                            <textarea name="comments" id="comments" class="form-control" rows="8"><%= house.comments %></textarea>
                        </div>      
                        <div class="form-group">
                            <label for="subcomments">תת-הערות</label>
                            <textarea name="subcomments" id="subcomments" class="form-control " rows="3" ><%= house.subcomments %></textarea>
                        </div> 
                        <div class="form-group">
                            <button type="submit" name="submit" class="btn btn-primary btn-lg">עדכן</button>
                        </div>
                    </div>
                </form> 
            </div><!--/.row-->
        </div><!--/.container-->
    </section><!--/#contact-page-->

    <% include templates/footer.ejs%>

  </body>
</html>
