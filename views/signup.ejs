<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include templates/head.ejs%>
    <style>
        .btn{
            margin-bottom:100px;
        }
    </style>
  </head>
  <body>

    <% include templates/header.ejs%>
    
    <% include templates/adminMenu.ejs%>


<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> רישום עובד</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- Signup FORM -->
    <form action="/manage/signupform" method="post">
        <div class="form-group">
            <label>username</label>
            <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>שם מלא</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>מספר פלאפון</label>
            <input type="number" class="form-control" name="phone">
        </div>
        <div class="form-group">
            <label>הרשאות מלאות</label>
            <input type="checkbox" class="form-control" name="isadmin">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">שלח</button>
    </form>

</div>
</div>

    <% include templates/footer.ejs%>


  </body>
</html>

